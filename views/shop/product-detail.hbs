{{#if product}}
<main class='container'>
    
        <form aria-labelledby="product-details" onsubmit="return false;" class="product-form">
        <h1 class='product-form-title'>Product Details</h1>
            <div>
                <label class='form-label' for="title">Title</label><br>
                <input id="title" name="title" type="text" value="{{product.title}}" readonly class='form-input'>
            </div>
    
            <div>
                <label class='form-label' for="imageUrl">Image URL</label><br>
                <input id="imageUrl" name="imageUrl" type="text" value="{{product.imageUrl}}" readonly >
            </div>
    
            {{#if product.imageUrl}}
                <div style="margin:8px 0;">
                    <img class='form-input' src="{{product.imageUrl}}" alt="{{product.title}}" style="max-width:300px; max-height:300px; display:block;">
                </div>
            {{/if}}
    
            <div>
                <label class='form-label' for="description">Description</label><br>
                <textarea class='form-textarea' id="description" name="description" rows="5" readonly>{{product.description}}</textarea>
            </div>
    
            <div>
                <label class='form-label' for="price">Price</label><br>
                <input id="price" name="price" type="number" step="0.01" value="{{product.price}}" readonly class='form-input'>
            </div>
        </form>
</main>
{{else}}
    <p>No product to display.</p>
{{/if}}