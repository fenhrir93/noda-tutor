<main class='container'>
  <h1 class='product-form-title'>Add Product</h1>
  <form action='/admin/product/{{product.id}}' method='post' class='product-form'>
    <div class='form-field'>
      <label for='title' class='form-label'>Product Title</label>
      <input type='text' id='title' name='title' required class='form-input' value="{{product.title}}" />
    </div>
    <div class='form-field'>
      <label for='imageUrl' class='form-label'>Image URL</label>
      <input type='text' id='imageUrl' name='imageUrl' required class='form-input' value="{{product.imageUrl}}"/>
    </div>
    <div class='form-field'>
      <label for='description' class='form-label'>Description</label>
      <textarea id='description' name='description' required class='form-textarea' value="{{product.description}}">
        {{product.description}}
      </textarea>
    </div>
    <div class='form-field'>
      <label for='price' class='form-label'>Price</label>
      <input type='number' id='price' name='price' required class='form-input' value="{{product.price}}"/>
    </div>
    <button type='submit' class='product-submit-btn'>Edit Product</button>
  </form>
</main>